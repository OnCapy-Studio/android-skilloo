<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/popupTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título da Anotação"
        android:textSize="18sp"
        android:textColor="@color/purple_500" />

    <TextView
        android:id="@+id/popupDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição da Anotação"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/popupDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da Anotação"
        android:textSize="14dp"
        android:textColor="@color/purple_500" />

    <Button
        android:id="@+id/closePopupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="Fechar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>
