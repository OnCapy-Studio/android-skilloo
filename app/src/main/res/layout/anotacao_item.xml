<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="665dp"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_filled"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/annotationDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_medium"
            android:text="Data da Anotação"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/annotationTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="Título da Anotação"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
